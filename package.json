{
    "name": "@menseb/react-boilerplate",
    "version": "1.0.2",
    "description": "React boilerplate",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "type": "module",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rimraf dist && webpack --config webpack.prod.js",
        "clean": "git clean -fXd -e !node_modules -e !node_modules/**/*",
        "commit": "cz",
        "coverage": "jest --coverage",
        "demo": "webpack --config webpack.dev.js",
        "deploy": "gh-pages -d demo",
        "eslint": "eslint .",
        "lint": "npm run eslint -- --fix",
        "live": "cross-env BABEL_ENV=production npm run start",
        "predeploy": "webpack --config webpack.dev.js --mode production",
        "prepublishOnly": "npm run lint && npm run test && npm run build",
        "release": "standard-version",
        "reset": "git clean -fXd",
        "setup": "npm run clean && npm install && npm run build",
        "start": "webpack serve --config webpack.dev.js --hot --open",
        "test": "jest",
        "watch": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MenSeb/react-boilerplate.git"
    },
    "keywords": [
        "react",
        "boilerplate"
    ],
    "author": "SÃ©bastien Menard",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MenSeb/react-boilerplate/issues"
    },
    "homepage": "https://github.com/MenSeb/react-boilerplate#readme",
    "devDependencies": {
        "@babel/cli": "7.16.0",
        "@babel/core": "7.16.5",
        "@babel/plugin-transform-runtime": "7.16.5",
        "@babel/preset-env": "7.16.5",
        "@babel/preset-react": "7.16.5",
        "@babel/runtime": "7.16.5",
        "@commitlint/cli": "15.0.0",
        "@commitlint/config-conventional": "15.0.0",
        "@commitlint/prompt-cli": "15.0.0",
        "@testing-library/jest-dom": "5.16.1",
        "@testing-library/react": "12.1.2",
        "@testing-library/react-hooks": "7.0.2",
        "@testing-library/user-event": "13.5.0",
        "babel-eslint": "10.1.0",
        "babel-loader": "8.2.3",
        "babel-plugin-jsx-remove-data-test-id": "3.0.0",
        "commitizen": "4.2.4",
        "coveralls": "3.1.1",
        "cross-env": "7.0.3",
        "css-loader": "6.5.1",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-jest": "25.3.0",
        "eslint-plugin-jest-dom": "3.9.2",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.27.1",
        "eslint-plugin-react-hooks": "4.3.0",
        "eslint-plugin-testing-library": "5.0.1",
        "gh-pages": "3.2.3",
        "jest": "27.4.5",
        "node-sass": "7.0.0",
        "prettier": "2.5.1",
        "prop-types": "15.7.2",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-test-renderer": "17.0.2",
        "rimraf": "3.0.2",
        "sass-loader": "12.4.0",
        "standard-version": "9.3.2",
        "style-loader": "3.3.1",
        "webpack": "5.65.0",
        "webpack-cli": "4.9.1",
        "webpack-dev-server": "4.7.0",
        "webpack-merge": "5.8.0"
    },
    "peerDependencies": {
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
